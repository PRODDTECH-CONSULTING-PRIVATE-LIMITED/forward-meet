    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const step1Btn = document.getElementById('step1-btn');
            const step2Btn = document.getElementById('step2-btn');
            const step3Btn = document.getElementById('step3-btn');
            const stepButtons = [step1Btn, step2Btn, step3Btn];

            const step1Content = document.getElementById('step1-content');
            const step2Content = document.getElementById('step2-content');
            const step3Content = document.getElementById('step3-content');
            const chartWrapper = document.getElementById('chart-container-wrapper');
            const contentPanels = [step1Content, step2Content, step3Content];
            
            let chartInstance = null;
            const venueData = [
                { name: 'Toit', userA: 28, userB: 37, rating: 4.5 },
                { name: 'Barbeque Nation', userA: 42, userB: 32, rating: 4.2 },
                { name: 'Hotel Ambient', userA: 31, userB: 42, rating: 3.9 },
                { name: 'The Black Pearl', userA: 38, userB: 39, rating: 4.4 }
            ];

            function switchStep(step) {
                stepButtons.forEach((btn, index) => {
                    btn.classList.toggle('active', index + 1 === step);
                });
                contentPanels.forEach((panel, index) => {
                    panel.classList.toggle('hidden', index + 1 !== step);
                });
                
                chartWrapper.classList.add('hidden');
                if (step === 3) {
                    chartWrapper.classList.remove('hidden');
                    renderResults();
                }
            }

            function renderResults() {
                const venueList = document.getElementById('venue-list');
                venueList.innerHTML = '';
                venueData.forEach(venue => {
                    const venueEl = document.createElement('div');
                    venueEl.className = 'bg-white p-4 rounded-lg shadow-sm border border-gray-200';
                    venueEl.innerHTML = `
                        <div class="flex justify-between items-center">
                            <h4 class="font-bold text-lg text-gray-800">${venue.name}</h4>
                            <span class="text-sm font-semibold bg-yellow-200 text-yellow-800 px-2 py-1 rounded-full">${venue.rating} ‚òÖ</span>
                        </div>
                        <div class="flex justify-around mt-2 text-sm text-gray-600">
                            <p>üë§ User A: <span class="font-semibold">${venue.userA} min</span></p>
                            <p>üë§ User B: <span class="font-semibold">${venue.userB} min</span></p>
                        </div>
                    `;
                    venueList.appendChild(venueEl);
                });
                renderChart();
            }

            function renderChart() {
                const ctx = document.getElementById('travelTimeChart').getContext('2d');
                if (chartInstance) {
                    chartInstance.destroy();
                }
                chartInstance = new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: venueData.map(v => v.name.length > 16 ? v.name.substring(0, 15) + '...' : v.name),
                        datasets: [
                            {
                                label: 'User A Travel Time (min)',
                                data: venueData.map(v => v.userA),
                                backgroundColor: 'rgba(74, 144, 226, 0.6)',
                                borderColor: 'rgba(74, 144, 226, 1)',
                                borderWidth: 1
                            },
                            {
                                label: 'User B Travel Time (min)',
                                data: venueData.map(v => v.userB),
                                backgroundColor: 'rgba(80, 227, 194, 0.6)',
                                borderColor: 'rgba(80, 227, 194, 1)',
                                borderWidth: 1
                            }
                        ]
                    },
                    options: {
                        indexAxis: 'y',
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            x: {
                                beginAtZero: true,
                                title: {
                                    display: true,
                                    text: 'Travel Time (minutes)'
                                }
                            }
                        },
                        plugins: {
                            tooltip: {
                                callbacks: {
                                    title: function(context) {
                                        return venueData[context[0].dataIndex].name;
                                    }
                                }
                            }
                        }
                    }
                });
            }

            step1Btn.addEventListener('click', () => switchStep(1));
            step2Btn.addEventListener('click', () => {
                switchStep(2);
                setTimeout(() => switchStep(3), 2000);
            });
            step3Btn.addEventListener('click', () => switchStep(3));
            
            const timelineItems = document.querySelectorAll('.timeline-item');
            const timelineDetails = document.getElementById('timeline-details');
            const timelineContent = {
                'timeline-phase1': 'Enable users to share a shortlist of venues with participants, who can then vote for their preferred option directly within the app. This fosters collaboration and ensures everyone is happy with the final choice.',
                'timeline-phase2': 'Expand beyond driving to include travel time calculations for public transit, walking, and cycling. Users can select their preferred mode of transport for more accurate and personalized planning.',
                'timeline-phase3': 'Implement a machine learning model to learn from user preferences, past bookings, and ratings. This will enable the app to provide highly personalized and intelligent venue suggestions over time.'
            };

            function updateTimeline(activeId) {
                timelineItems.forEach(item => {
                    item.classList.toggle('active', item.id === activeId);
                });
                timelineDetails.textContent = timelineContent[activeId];
            }

            timelineItems.forEach(item => {
                item.addEventListener('click', () => updateTimeline(item.id));
            });
            
            updateTimeline('timeline-phase1');
        });
    </script>
</body>
